<%- include('../partials/startToStyle') %>

    <link rel="stylesheet" href="/stylesheets/new.css">

<%- include('../partials/styleToNav') %>

    <div class="left">
        <h1>Add a Book</h1>
    </div>

    <div class="details">

        <form action="/books" method="POST">
            
            <label for="title">Title: </label>
            <input type="text" name="title" id="title"
            placeholder="Title" required autofocus>

            <label for="format">Format: </label>
            <select name="format" id="format">
                <option value="book">Book / E-Reader</option>
                <option value="audiobook">Audiobook</option>
            </select>

            <label for="dateFinished">Finish Date: </label>
            <input type="date" name="dateFinished" id="dateFinished">
            
            <div class="buttons">
                <button>Add Book</button>
                <a href="/books">Cancel</a>
            </div>
        
        </form>

    </div>

<%- include('../partials/bookshelfToEnd') %>