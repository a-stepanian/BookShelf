<%- include('../partials/startToStyle') %>

    <link rel="stylesheet" href="/stylesheets/clubs/clubEdit.css">

<%- include('../partials/styleToNav') %>

        <div class="left">
            <h1>Edit Book</h1>
        </div>

        <div class="details">
            <form class="form" action="/clubs/<%=club._id%>/books/<%=book._id%>?_method=PUT" method="POST">
                <label for="title">Title: </label>
                <input type="text" name="title" id="title"
                value="<%=book.title%>" required autofocus>
                <div class="buttons">
                    <button class="saveButton">Save</button>
                    <a href="/clubs/<%=club._id%>/books/<%=book._id%>">Cancel</a>
                </div>
            </form>
            
            <div class="idAndDelete">
                <form action="/clubs/<%=club._id%>/books/<%=book._id%>?_method=DELETE" method="POST">
                    <button class="deleteButton">Delete Book</button>
                </form>
                <p><strong>Book ID: <%=book._id%></strong></p>
            </div>
        </div>

    </main>
    <script src="/javascripts/flash.js"></script>

</body>
</html>