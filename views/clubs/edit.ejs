<%- include('../partials/startToStyle') %>

    <link rel="stylesheet" href="/stylesheets/clubs/clubEdit.css">

<%- include('../partials/styleToNav') %>

        <div class="left">
            <h1>Edit Your Club</h1>
        </div>

        <div class="details">
            <form class="form" action="/clubs/<%=club._id%>?_method=PUT" method="POST">
                <label for="clubName">Club Name: </label>
                <input type="text" name="clubName" id="clubName"
                value="<%=club.clubName%>" required autofocus>
                <div class="buttons">
                    <button class="saveButton">Save</button>
                    <a href="/clubs">Cancel</a>
                </div>
            </form>
            <div class="idAndDelete">
                <form action="/clubs/<%=club._id%>?_method=DELETE" method="POST">
                    <button class="deleteButton">Delete Club</button>
                </form>    
                <p><strong>Club ID: <%=club._id%></strong></p>
            </div>

        </div>
        
    </main>
    <script src="/javascripts/flash.js"></script>
</body>
</html>